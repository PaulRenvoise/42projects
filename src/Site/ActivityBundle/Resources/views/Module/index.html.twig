{% extends '::layout.html.twig' %}

{% block title %} {{ 'MODULE_HOME'|trans }} - {{ parent() }} {% endblock %}
{% block active_forum 'active' %}
{% block body %}
	<h2 class="ui header padded left">
		<i class="book large icon"></i>
		<div class="content">
			{{ 'MODULE_HOME'|trans|upper }}
		</div>
	</h2>
	<div class="ui clearing divider"></div>
	<div class="ui grid">
		<div class="left floated two wide column rightbordered">
			<div class="ui fluid basic accordion">
				{% for module in modules %}
					<div class="title">
						<h4 class="ui header">
							<i class="dropdown icon"></i>
							{{ module.name }}
						</h4>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}